import vertexai
from vertexai.generative_models import GenerativeModel, Part

def recommend_furniture_items(room_image_uri, user_preference_text):
    """
    Analyzes a room image and recommends furniture items based on style and user preference.
    """
    model = GenerativeModel("gemini-1.0-pro-vision")
    
    prompt = f"""
    You are an interior design expert. Analyze the style of the room in the image.
    Based on the style and the user's request: '{user_preference_text}', 
    recommend 3 furniture items that would fit perfectly.
    Provide the output in JSON format with keys: item_name, reason, estimated_price_range.
    """
    
    image = Part.from_uri(uri=room_image_uri, mime_type="image/jpeg")
    
    response = model.generate_content(
        [image, prompt],
        generation_config={"temperature": 0.2} # Lower temperature for more deterministic output
    )
    
    return response.text

